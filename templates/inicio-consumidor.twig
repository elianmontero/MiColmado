{% extends "layout_proveedor.twig" %}

{% block title %}
Inicio Proveedor - Mi Colmado
{% endblock %}

{% block sesion %}
    <div class="menu-seccion">
        {% if session.usuario_nombre is defined %}
            <p>Hola, {{ session.usuario_nombre }}</p>
            <button onclick="location.href='logout.php'">Cerrar Sesión</button>
        {% else %}
            <button onclick="location.href='login.php'">Iniciar Sesión</button>
            <button onclick="location.href='registro-proveedor.php'">Registrarse</button>
        {% endif %}
    </div>
{% endblock %}

{% block content %}

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img style="object-position: bottom;" src="/public/assets/img/slider-organizando.png" alt="Productos frescos">
                <div class="slider-overlay">
                    <h1>manten tus productos siempre frescos</h1>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/public/assets/img/slider-productos.jpg" alt="Variedades de productos">
                <div class="slider-overlay">
                    <h1>Gestiona tus productos</h1>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/public/assets/img/slider-deliveri.jpg" alt="deliveries a la orden">
                <div class="slider-overlay">
                    <h1>Deliveries siempre listos para entregar tus pedidos</h1>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="container-btn">
        <button id="productos-btn" onclick="location.href='agregar-producto.php'">Agregar Producto</button>

        <button id="productos-btn" onclick="location.href='ver-productos.php'">Ver Productos</button>
    </div>
{% endblock %}