{% extends "layout.twig" %}

{% block title %}
Inicio - Mi Tienda
{% endblock %}

{% block sesion %}
<div class="menu-seccion">
    {% if session.usuario_nombre is defined %}
        <p>Hola, {{ session.usuario_nombre }}</p>
    {% else %}
        <p><a href="login.php">Iniciar Sesi√≥n</a> | <a href="registro.php">Registrarse</a></p>
    {% endif %}
</div>
{% endblock %}

{% block content %}
<div class="product-section">
    {% for product in products %}
    <div class="product-card">
        <img src="{{ product.image }}" alt="{{ product.name }}">
        <h3>{{ product.name }}</h3>
        <p>{{ product.price }}</p>
    </div>
    {% endfor %}
</div>
{% endblock %}
